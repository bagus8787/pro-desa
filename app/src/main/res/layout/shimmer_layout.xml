<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_art"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    tools:targetApi="o">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_berita"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="center"
            android:background="@color/colorBackground"/>

        <TextView
            android:id="@+id/txt_judul_berita"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txt_tgl_upload"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="26dp"
            android:layout_marginLeft="26dp"
            android:layout_marginBottom="1dp"
            android:gravity="start"
            android:background="@drawable/background_input_text"
            android:backgroundTint="@android:color/darker_gray"
            android:text="Kerja Bakti Desa Siman, Kabupaten Ponorogo"
            android:textAlignment="textStart"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_tgl_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="26dp"
            android:layout_marginLeft="26dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/background_input_text"
            android:backgroundTint="@android:color/darker_gray"
            android:text="2 Januari 2021"
            android:textColor="@android:color/darker_gray"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/background_input_text"
            android:backgroundTint="@android:color/darker_gray"
            android:text="Read More >"
            android:textColor="@android:color/darker_gray"
            android:textSize="10sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>