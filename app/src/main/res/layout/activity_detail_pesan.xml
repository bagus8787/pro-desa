<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="25dp"
    android:background="@color/colorBackground"
    tools:context=".ui.user.activity.DetailPesanActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_btn_back"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:src="@drawable/ic_baseline_arrow_back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Detail Pesan"
                android:textSize="24sp"/>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_art"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:elevation="0dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp"
            tools:targetApi="o">

            <ImageView
                android:id="@+id/img_berita"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="center"
                android:src="@drawable/img_kerja_bakti" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textStyle="bold"
            android:text="Kepala Dusun anda baru saja membuat pengumuman tentang Kerja Bakti. Silahkan lihat yang beliau sampaikan."
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/img_putih"
            android:layout_alignStart="@+id/text_p"
            android:layout_alignLeft="@+id/text_p"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="5dp"
            android:padding="5dp"
            android:gravity="left"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_baseline_date_range"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:text="Senin ,20 Januari 2021"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:text="12.00 WIB"
                android:textSize="10sp"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>