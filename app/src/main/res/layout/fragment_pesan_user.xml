<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="25dp"
    android:background="@color/colorBackground"
    tools:context=".ui.user.fragment.PengumumanUserFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:src="@drawable/ic_baseline_arrow_back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Pesan Masuk"
                android:textSize="24sp"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="20dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_list_pesan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:elevation="0dp"
                android:layout_marginHorizontal="20dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="10dp"
                tools:targetApi="o">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:src="@color/colorPengumuman"
                    android:scaleType="center" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_pe"
                        android:layout_width="81dp"
                        android:layout_height="78dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="14dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="14dp"
                        android:background="@drawable/shape_image_pe"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="41dp"
                        android:layout_alignStart="@+id/img_pe"
                        android:layout_alignLeft="@+id/img_pe"
                        android:layout_alignTop="@+id/img_pe"
                        android:layout_marginStart="22dp"
                        android:layout_marginLeft="22dp"
                        android:layout_marginTop="18dp"
                        android:src="@drawable/ic_baseline_photo_camera" />

                    <TextView
                        android:id="@+id/text_pesan"
                        android:layout_width="247dp"
                        android:layout_height="48dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="9dp"
                        android:layout_marginLeft="9dp"
                        android:layout_marginTop="15dp"
                        android:layout_toEndOf="@+id/img_pe"
                        android:layout_toRightOf="@+id/img_pe"
                        android:text="Kepala Dusun anda baru saja membuat pengumuman tentang Kerja Bakti. Silahkan lihat yang beliau sampaikan"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_pesan"
                        android:layout_marginStart="9dp"
                        android:layout_marginLeft="9dp"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@+id/img_pe"
                        android:layout_toRightOf="@+id/img_pe"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_date_range" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:textSize="10sp"
                            android:text="17 Januari 2021, "/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="2dp"
                            android:textSize="10sp"
                            android:text="19.30"/>

                    </LinearLayout>


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>