<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/login2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.Register2Activity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="30dp"
        android:paddingRight="20dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.324">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/selanjutnya"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="Silahkan Daftar dengan mengisi biodata anda"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/rv_atas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp">

                <LinearLayout
                    android:id="@+id/ln_atas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="Provinsi"
                        android:textColor="@android:color/white" />

                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/fm_prov"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/background_spinner"
                        android:padding="5dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="Kabupaten"
                        android:textColor="@android:color/white" />

                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/fm_kab"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/background_spinner"
                        android:hint="Kabupaten"
                        android:padding="5dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="Kecamatan"
                        android:textColor="@android:color/white" />

                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/fm_kec"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/background_spinner"
                        android:hint="Kecamatan"
                        android:padding="5dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="Desa"
                        android:textColor="@android:color/white" />

                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/fm_desa"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/background_spinner"
                        android:hint="Desa"
                        android:padding="5dp" />

                    <Switch
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Apakah Anda bukan Penduduk setempat ?"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="5dp"
                        android:text="Password"
                        android:textColor="@android:color/white" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/fm_pass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:backgroundTint="@color/colorPengumuman"
                        android:hint="Masukkan Password"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/colorPengumuman"
                        android:textColorHint="@android:color/darker_gray" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="Password Confirm"
                        android:textColor="@android:color/white" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/fm_pass_conf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:backgroundTint="@color/colorPengumuman"
                        android:hint="Masukkan Password Confirm"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/colorPengumuman"
                        android:textColorHint="@android:color/darker_gray" />

                    <Button
                        android:id="@+id/btn_register"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:background="@drawable/background_button_daftar"
                        android:text="@string/daftar"
                        android:textColor="@android:color/white" />

                </LinearLayout>
            </ScrollView>



        </RelativeLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>